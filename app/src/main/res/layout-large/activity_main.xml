<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/framelayout_left"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@color/black"
            android:layout_weight="1">
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="6"
            android:layout_height="match_parent">


            <LinearLayout
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:id="@+id/tablet_toolbar"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:weightSum="5"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                >

                <LinearLayout
                    android:id="@+id/tablet_date_time"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/tebalet_date_time"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tablet_toolbar_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19th Dec, 2017"
                            android:textColor="@color/white"
                            android:textSize="23sp"
                            android:layout_centerHorizontal="true"
                            />

                        <TextView
                            android:id="@+id/tablet_toolbar_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6:45AM"
                            android:textColor="@color/white"
                            android:textSize="23sp"
                            android:layout_below="@id/tablet_toolbar_date"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>


                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:background="@color/white"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/tablet_salon_name"
                    android:orientation="horizontal"
                    android:layout_weight="2.5"
                    android:layout_toRightOf="@id/tablet_salon_name"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tablet_salon_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lakme, Netaji Subash Place"
                            android:textColor="@color/white"
                            android:textSize="23sp"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>


                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:background="@color/white"

                        />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/tablet_username"
                    android:orientation="horizontal"
                    android:layout_weight="1.5"
                    android:layout_toRightOf="@id/tablet_salon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_help_outline_black_24dp"
                            android:tint="@color/white"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            />

                        <TextView
                            android:id="@+id/tablet_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hey, Saurabh !!  "
                            android:textColor="@color/white"
                            android:textSize="23sp"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>


            <FrameLayout
                android:layout_below="@id/tablet_toolbar"
                android:id="@+id/framelayout_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

        </LinearLayout>


    </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:tint="@color/white"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_chat_black_24dp"
        app:fabSize="normal"
        />

</android.support.design.widget.CoordinatorLayout>