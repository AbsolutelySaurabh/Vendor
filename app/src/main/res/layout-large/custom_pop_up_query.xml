<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/card_curved_edges"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:layout_height="wrap_content">


    <TextView
            android:id="@+id/dummy_text"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="Your Query has been submitted."
            />

        <TextView
            android:id="@+id/dummt_text_2"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/dummy_text"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Our customer care executive will get back to you shortly."
            />

        <TextView
            android:id="@+id/ok_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="@color/white"
            android:background="@drawable/card_curved_edges"
            android:layout_below="@id/dummt_text_2"
            android:backgroundTint="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            />


    </RelativeLayout>

</RelativeLayout>