<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/pending_bookings_heading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    android:padding="15dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/pending_bookings_guest_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Saurabh Singh"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="@color/blue_grey_900"
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pending_bookings_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17th July"
            android:textSize="18sp"
            android:textColor="@color/blue_grey_900"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/pending_bookings_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:45AM"
            android:textSize="18sp"
            android:textColor="@color/blue_grey_900"
            android:gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/amount_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.  "
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/blue_grey_900"
            />
        <TextView
            android:id="@+id/pending_bookings_amount_to_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:textSize="18sp"
            android:textColor="@color/blue_grey_900"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pending_bookings_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Services"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/red_color"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/red_color"

            />
    </LinearLayout>

</LinearLayout>