<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/pop_dummy_image_curcle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_blur_circular_black_24dp"
            />

        <TextView
            android:id="@+id/pop_service_text"
            android:layout_toRightOf="@id/pop_dummy_image_curcle"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="Blow Dry"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/pop_dummy_icon_rupay"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:text="Rs."
                android:textSize="20sp"
                />


            <TextView
                android:id="@+id/pop_service_amount"
                android:layout_toRightOf="@id/pop_dummy_icon_rupay"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:text="500"
                android:textSize="20sp"
                />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>